{
  "manifest_version": 2,
  "name": "Reveal hidden HTML elements",
  "version": "1.8",
  "author": "Nathan Nichols",
  "description": "Allows you to force all hidden text on a page to show, and alerts you if it detects a significant amount of hidden text on a page.",
  "applications": {
    "gecko": {
	  "id": "SubmitMe@0xbeef.coffee",
	  "strict_min_version": "42.0"
    }
  },
	"icons":{
		"16": "icons/16x16.png",
		"48": "icons/48x48.png"
	},
  "permissions": [
	"contextMenus",
	"webRequest",
	"activeTab",
	"notifications",
	"<all_urls>"
	],
  "content_scripts": [
	{
    "matches": ["<all_urls>"],
    "js": ["improve_css.js"]
	}],
	"page_action": {
		"browser_style": true,
		"default_icon": {
			"16": "icons/16x16.png",
			"48": "icons/48x48.png"
		},
		"default_title": "Submit Me",
		"default_popup": "popup/popup.html"
	},


  "background": {
    "scripts": ["background.js"]
  }
  
}
